{% extends "base.html.twig" %}
{% block title %}
    {{ parent() }}
    connexion
{% endblock %}

{% block contenu %}
    {% if form.valide is defined %}
        {% if form.valide == true %}
            <h1>Connexion réussie</h1>
            <h1>Vous êtes bien connecté(e) avec :
                {{form.email}}</h1>
        {% else %}
            <h1>Echec de la connexion</h1>
            <h1>Erreur :
                {{form.message}}</h1>
            <h1>
                <a href="index.php?page=connexion">Retourner sur la page de connexion</a>
            </h1>
        {% endif %}
    {% else %}

        <h1 class="text-center p-4">
            Se connecter
        </h1>
        <div class="col-12 col-md-6 text-center bg-primary text-white"></div>
        <div class="container-fluid ">
            <div class="row justify-content-center p-4 ">
                <div class="col-6 text-center">
                    <form action="index.php?page=connexion" method="post" enctype="application/x-www-form-urlencoded">
                        <h1>Connectez-vous sur SHOP-SHOP</h1>

                        <label for="inputEmail" class="sr-only">Email:</label>
                        <input type="email" id="inputEmail" name="inputEmail" class="form-control" placeholder="Email" required autofocus>

                        <label for="inputPassword" class="sr-only">Mot de passe:</label>
                        <input type="password" id="inputPassword" name="inputPassword" class="form-control" placeholder="Mot de passe" required>
                        </select>
                        <button class="btn btn-lg btn-primary btn-block" type="submit" name="btConnecter">Se connecter</button>

                    </form>
                </div>
            </div>
    {% endif %}
    {% endblock %}